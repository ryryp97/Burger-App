<div class="wrapper">
    <div class="center">

        <img src="/assets/img/cartoon_burger.jpg" alt="burger">

        <h1>Eat-Da-Burger!</h1>

        <ul>
            {{#each burgers}}
            <li>{{id}}. {{burger_name}}</li>
            {{/each}}
        </ul>

        <h2>Add a Burger</h2>
        <form class="create-form">

            <div class="form-group">
                <textarea name="burger" rows="3"></textarea>

            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>